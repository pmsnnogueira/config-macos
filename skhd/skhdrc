# open terminal
#cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
#cmd - return : osascript ~/.config/skhd/iterm.script
cmd - return : open -na "/Applications/alacritty.app"

# Command + number -> focus workspace
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9

# Changing Window Focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# change focus between external displays
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east
alt - f: yabai -m display --focus north
alt - d: yabai -m display --focus south


# rotate layout clockwise
shift + cmd - r : yabai -m space --rotate 270

# flip along y-axis
shift + cmd - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + cmd - x : yabai -m space --mirror x-axis

# toggle window float
shift + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Modifying Window Size
shift + cmd - f : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + cmd - e : yabai -m space --balance 

# moving windows Around

# swap windows
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - h : yabai -m window --swap west
shift + cmd - l : yabai -m window --swap east

# move window and split
#ctrl + alt - j : yabai -m window --warp south
#ctrl + alt - k : yabai -m window --warp north
#ctrl + alt - h : yabai -m window --warp west
#ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
#shift + alt - p : yabai -m window --space prev;
#shift + alt - n : yabai -m window --space next;

# move window to space
cmd + shift - 1 : yabai -m window --space 1;
cmd + shift - 2 : yabai -m window --space 2;
cmd + shift - 3 : yabai -m window --space 3;
cmd + shift - 4 : yabai -m window --space 4;
cmd + shift - 5 : yabai -m window --space 5;
cmd + shift - 6 : yabai -m window --space 6;
cmd + shift - 7 : yabai -m window --space 7;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service && brew services restart sketchybar
